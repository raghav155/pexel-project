<div style="min-height: 300px;width: 40%;border: 1px solid #eee;border-radius: 3px;margin-bottom: 50px" class="ui container">
    <div style="text-align: center;padding: 30px">
        <a style="font-size: 17px;font-weight: 800;color: #4a90e2;" href="/login">Login</a> &nbsp;&nbsp;&nbsp;&nbsp;
        <a style="font-size: 17px;font-weight: 800;color: #66667a" href="/register">Sign Up</a>
    </div>

    <div style="text-align: center">
        <form action="/auth/facebook" method="get">
            <button style="width: 80%;padding: 15px;background-color: #4a90e2" class="ui facebook button">
                <i class="facebook icon"></i>
                Login with Facebook
            </button>
        </form>
    </div>
    <div style="text-align: center;margin-top: 30px">
        <form action="/auth/google" method="get">
