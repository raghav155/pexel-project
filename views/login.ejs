<script>

    $('.ui.inline.dropdown').dropdown();

    setTimeout(function () {

        $('#err-msg').fadeOut();
    },5000);

    $('#searchbtn').click(function () {
        let sq = $('#searchip').val();
        if(sq == ''){
            $('#searchip').popup();
        }else{
            window.location = '/search/' + sq;
        }
    });
    $('#searchbtn1').click(function () {
        let sq = $('#searchip1').val();
